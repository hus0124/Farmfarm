<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <!-- 	BNO = id, TITLE = 이름, WRITER = 이메일, CONTENT = 센서별 그래프 --> 
<mapper namespace="org.zerock.mapper.AdminMapper">

	<sql id="criteria">
		<trim prefix="(" suffix=") AND " prefixOverrides="OR">
			<foreach item='type' collection="typeArr">
				<trim prefix="OR">
					<choose>
						<when test="type == 'I'.toString()">
							ID like CONCAT('%', #{keyword}, '%')			<!-- 오라클은 '%'||#{keyword}||'%' -->
						</when>
						<when test="type == 'U'.toString()">
							Username like CONCAT('%', #{keyword}, '%')	<!-- MySql은 옆에 구문 -->
						</when>
						<when test="type == 'S'.toString()">
							Serialnum like CONCAT('%', #{keyword}, '%')	
						</when>
					</choose>
				</trim>
			</foreach>
		</trim>
	</sql>

	<select id="getList" resultType="org.zerock.domain.AdminVO">
	<![CDATA[
		select * from memberinfo where
		seq <= 10
		]]>
	</select>	
	
